<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="960" prefWidth="1280" spacing="25.0" stylesheets="@com/example/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.handymen.UserLoginController">

    <children>
      <ImageView fitHeight="155.0" fitWidth="237.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@logo.png" />
         </image>
      </ImageView>

        <Label alignment="CENTER" contentDisplay="CENTER" text="User Login" textAlignment="CENTER">
            <font>
                <Font name="Inter Semi Bold" size="28.0" />
            </font>
        </Label>

        <TextField fx:id="emailField" maxWidth="450" opacity="0.95" prefHeight="44" prefWidth="450" promptText="Email" VBox.vgrow="NEVER" />

        <PasswordField fx:id="passwordField" maxWidth="450" opacity="0.95" prefHeight="44" prefWidth="450" promptText="Password" VBox.vgrow="NEVER" />


        <Button onAction="#onLoginClick" prefHeight="56.0" prefWidth="150" style="-fx-background-color: #3b7ddd; -fx-text-fill: white;" text="Login">
            <font>
                <Font name="Roboto Light" size="22.0" />
            </font>
        </Button>

        <HBox alignment="CENTER">
            <children>
                <Label alignment="CENTER_RIGHT" text="Are you a new user?  ">
                    <font>
                        <Font name="Roboto Light" size="22.0" />
                    </font>
                </Label>

                <Hyperlink onAction="#onSignUpClick" text="Sign up">
                    <font>
                        <Font name="Roboto Light" size="22.0" />
                    </font>
                </Hyperlink>
            </children>
        </HBox>

    </children>
</VBox>
