<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="960" prefWidth="1280" spacing="12" stylesheets="@com/example/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.handymen.UserSignupController">

    <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@logo.png" />
         </image>
      </ImageView>

        <Label text="Create New Account">
         <font>
            <Font name="Inter Semi Bold" size="28.0" />
         </font></Label>

        <TextField fx:id="nameField" maxWidth="450" opacity="0.95" prefHeight="44" prefWidth="450" promptText="Full Name" VBox.vgrow="NEVER" />
        <TextField fx:id="emailField" maxWidth="450" opacity="0.95" prefHeight="44" prefWidth="450" promptText="Email" VBox.vgrow="NEVER" />
        <PasswordField fx:id="passwordField" maxWidth="450" opacity="0.95" prefHeight="44" prefWidth="450" promptText="Password" VBox.vgrow="NEVER" />
        <PasswordField fx:id="confirmPasswordField" maxWidth="450" opacity="0.95" prefHeight="44" prefWidth="450" promptText="Confirm Password" VBox.vgrow="NEVER" />

        <Button onAction="#onSignUpSubmit" prefWidth="150" style="-fx-background-color: #2d9d48; -fx-text-fill: white;" text="Sign Up" >
         <font>
            <Font name="Roboto Light" size="22.0" />
         </font></Button>

        <Hyperlink onAction="#onBackToLogin" text="Back to Login" />

    </children>
</VBox>
