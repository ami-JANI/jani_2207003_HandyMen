<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="960"
           prefWidth="1280"
           stylesheets="@com/example/style.css"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.handymen.WorkerDashboardController">

    <ScrollPane fitToWidth="true" >
        <VBox alignment="CENTER" spacing="30" >
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>


            <Label text="Worker Dashboard">
                <font>
                    <Font name="Inter Semi Bold" size="38"/>
                </font>
            </Label>

            <GridPane hgap="20" vgap="18" >
                <padding>
                    <Insets bottom="20" left="40" right="40" top="20"/>
                </padding>

                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="200"/>
                    <ColumnConstraints minWidth="350"/>
                </columnConstraints>

                <Label text="Full Name:" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Email:" GridPane.rowIndex="1"/>
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Phone:" GridPane.rowIndex="2"/>
                <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Profession:" GridPane.rowIndex="3"/>
                <TextField fx:id="professionField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Experience:" GridPane.rowIndex="4"/>
                <TextField fx:id="experienceField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Rate:" GridPane.rowIndex="5"/>
                <TextField fx:id="rateField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Location:" GridPane.rowIndex="6"/>
                <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
            </GridPane>
            <HBox alignment="CENTER" spacing="20">
                <Button text="Save Changes"
                        prefWidth="180"
                        onAction="#onSaveChangesClick"
                        style="-fx-background-color:#2d9d48; -fx-text-fill:white;"
                        styleClass="animated-button"/>
            </HBox>

            <Separator/>

            <Label text="Work Availability">
                <font>
                    <Font name="Inter Semi Bold" size="26"/>
                </font>
            </Label>

            <DatePicker fx:id="calendar"/>

            <HBox spacing="20" alignment="CENTER">
                <Label text="ðŸŸ© Free"/>
                <Label text="ðŸŸ¨ Requested"/>
                <Label text="ðŸŸ¥ Booked"/>
            </HBox>

            <GridPane fx:id="slotGrid"
                      hgap="15"
                      vgap="15"
                      alignment="CENTER">

                <Button text="8:00 - 9:00" prefWidth="150"/>
                <Button text="9:00 - 10:00" prefWidth="150"/>
                <Button text="10:00 - 11:00" prefWidth="150"/>
                <Button text="11:00 - 12:00" prefWidth="150"/>

                <Button text="2:00 - 3:00" prefWidth="150" GridPane.rowIndex="1"/>
                <Button text="3:00 - 4:00" prefWidth="150" GridPane.rowIndex="1"/>
                <Button text="4:00 - 5:00" prefWidth="150" GridPane.rowIndex="1"/>
                <Button text="5:00 - 6:00" prefWidth="150" GridPane.rowIndex="1"/>

            </GridPane>

        </VBox>
    </ScrollPane>
    <VBox fx:id="notificationPane"
          prefWidth="350"
          spacing="10"
          style="-fx-background-color:white; -fx-border-color:#ccc;"
          StackPane.alignment="CENTER_RIGHT"
          visible="false">

        <Label text="Notifications"
               style="-fx-font-size:18; -fx-font-weight:bold;"/>

        <ScrollPane fitToWidth="true">
            <VBox fx:id="notificationList" spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </VBox>

        </ScrollPane>

        <Button text="âŒ Clear All"
                onAction="#clearNotifications"
                style="-fx-background-color:#e74c3c; -fx-text-fill:white;"/>
    </VBox>

    <Button text="ðŸ””"
            onAction="#toggleNotifications"
            StackPane.alignment="TOP_RIGHT"
            style="-fx-background-radius:50%; -fx-font-size:16;">
        <StackPane.margin>
            <Insets top="20" right="110"/>
        </StackPane.margin>
    </Button>

    <Button text="Sign Out"
            onAction="#onSignOut"
            StackPane.alignment="TOP_RIGHT"
            style="-fx-background-color:#c0392b; -fx-text-fill:white;">
        <StackPane.margin>
            <Insets top="20" right="30"/>
        </StackPane.margin>
    </Button>

</StackPane>
