<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="960" prefWidth="1280" stylesheets="@com/example/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.handymen.WorkerDashboardController">

    <!-- ================= SIGN OUT BUTTON ================= -->


    <!-- ================= MAIN CONTENT ================= -->
    <VBox alignment="CENTER" spacing="20">

        <Label text="Worker Dashboard">
            <font>
                <Font name="Inter Semi Bold" size="38" />
            </font>
        </Label>

        <GridPane hgap="20" vgap="18">
            <padding>
                <Insets bottom="20" left="40" right="40" top="20" />
            </padding>

            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="200" />
                <ColumnConstraints minWidth="350" />
            </columnConstraints>

            <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Profession:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="professionField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Experience:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="experienceField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Rate:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="rateField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <HBox alignment="CENTER" spacing="20">
            <Button prefWidth="180" text="Change Password">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            <Button onAction="#onSaveChangesClick" prefWidth="180" style="-fx-background-color: #2d9d48; -fx-text-fill: white;" styleClass="animated-button" text="Save Changes" />
        </HBox>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>

    </VBox>
    <Button text="Sign Out"
            onAction="#onSignOut"
            StackPane.alignment="TOP_RIGHT"
            style="-fx-background-color: #c0392b; -fx-text-fill: white;">
        <StackPane.margin>
            <Insets top="20" right="30"/>
        </StackPane.margin>
    </Button>
</StackPane>
